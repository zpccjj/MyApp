<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<ListView
        android:id="@+id/sr_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="5sp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">
     </ListView>
     
	<ScrollView
	    android:id="@+id/sr_sv"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_marginBottom="5dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginTop="5dp"
	    android:layout_weight="1" 
	    android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TableRow
		    android:id="@+id/sr_tr"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginTop="50dp"
		    android:visibility="gone" >
	
			      <TextView
			          android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:layout_gravity="center"
			          android:layout_weight="3"
			          android:text="@string/txt_string_15"
			          android:textSize="16sp" />
			      <Spinner
			          android:id="@+id/sr_2"
			          android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:layout_weight="1"
			          android:textSize="16sp" />
			 	</TableRow>
            
           <TableRow
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="10dp"
		      android:layout_marginRight="10dp"
		      android:layout_marginTop="30dp" >
		      <TextView
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:layout_gravity="center"
		          android:layout_weight="3"
		          android:text="@string/txt_string_14"
		          android:textSize="16sp" />

		      <EditText
		          android:id="@+id/sr_1"
		          android:layout_width="fill_parent"
		          android:layout_height="wrap_content"
		          android:layout_weight="1"
		          android:inputType="number"
		          android:maxLength="7"
		          android:textSize="16sp" />

		 	</TableRow>
            

           <CheckBox
               android:id="@+id/sr_3"
               android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:layout_marginLeft="10dp"
		       android:layout_marginRight="10dp"
		       android:layout_marginTop="30dp" 
		       android:textSize="16sp" 
               android:text="@string/txt_string_16" />
		 	
        </LinearLayout>
    </ScrollView>
    
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical" >
        
        <Button
            android:id="@+id/sr_btn0"
            android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back_string_2" />
        <Button
            android:id="@+id/sr_btn4"
            android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_string_14" />
        
		<Button
            android:id="@+id/sr_btn1"
            android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_string_09" />

    	<Button
    	    android:id="@+id/sr_btn2"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="5dp"
    	    android:layout_marginRight="5dp"
    	    android:layout_weight="1"
    	    android:text="@string/btn_string_11"
    	    android:visibility="gone" />
    	
    	<Button
    	    android:id="@+id/sr_btn3"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="5dp"
    	    android:layout_marginRight="5dp"
    	    android:layout_weight="1"
    	    android:text="@string/btn_string_10"
    	    android:visibility="gone" />

    </TableRow>
</LinearLayout>